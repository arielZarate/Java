public class Empresa
{
    private String nombre;
    private Cliente clientes[];
    private int conteo[][];  // para contar por destino y forma de pago
    
    public Empresa()
    {
       nombre = "COLO Tour";
       clientes = new Cliente[5];
       conteo = new int[5][3]; // cada casilla arranca en cero...
    }
    
    public Empresa(int n)
    {
       nombre = "Lozada Viajes";
       clientes = new Cliente[n];
       conteo = new int[5][3];
    }
    
    public Empresa(String tit, int n)
    {
       nombre = tit;
       clientes = new Cliente[n];
       conteo = new int[5][3];
    }
    
    public int getCantidadClientes()
    {
        return clientes.length;   
    }
    
    public Cliente getCliente(int i)
    {
        return clientes[i];   
    }
    
    public void setCliente(Cliente cli, int i)
    {
        if (cli != null){ clientes[i] = cli; }
    }
    
    public void contar ()
    {
        // cada fila de la matriz representa un destino posible
        // cada columna representa una forma de pago posible
        // cada casillero se usa para contar cuántos de cada destino pagan con cada forma posible...
        
        // recorremos el vector para obtener el destino y la forma de pago de cada cliente...
        for(int i = 0; i < clientes.length; i++)
        {
            // obtener el destino de viaje (que en la matriz, será la fila...)
            int dest = clientes[i].getDestino();   
            
            // obtener la forma de pago (que en la matriz será la columna...)
            int form = clientes[i].getForma();
            
            // entrar en el casillero [dest][form] de la matriz, y contar...
            conteo[dest][form]++;  // :-) !!!!!
        }
    }
    
    public String toStringConteo()
    {
        // convertir a String los resultados que están en la matriz y retornar...
        String r = "Conteo por destino y forma de pago:";
        for (int i = 0; i < conteo.length; i++)
        {
            r = r + "\n\tDestino: " + i;
            for (int j = 0; j < conteo[i].length; j++)
            {
                   r = r + "\n\t\tForma de Pago: " + j + " - Cantidad de clientes: " + conteo[i][j];
            }
        }
        return r;
    }
    
    public String toString()
    {
        String r = "Empresa: " + nombre + "\n{";
        for(int i = 0; i < clientes.length; i++)
        {
            r = r + "\n\t" + clientes[i].toString();    
        }
        r = r + "\n}";
        return r;
    }
}
