public class Cliente
{
    private int dni;
    private String nombre;
    private int destino;  // un valor entre 0 y 4
    private int forma;    // un valor entre 0 y 2
    
    public Cliente()
    {
    }
    
    public Cliente(int d, String nom, int des, int f)
    {
        dni = d;
        nombre = nom;
        destino = des;
        forma = f;
    }

    public Cliente (int d)
    {
        dni = d;
    }

    public int getDNI()
    {
        return dni;   
    }
    
    public void setDNI(int d)
    {
        dni = d;   
    }
    
    public String getNombre()
    {
        return nombre;   
    }
    
    public void setNombre(String nom)
    {
        nombre = nom;   
    }

    public int getDestino()
    {
        return destino;   
    }
    
    public void setDestino(int d)
    {
        destino = d;   
    }

    public int getForma()
    {
        return forma;   
    }
    
    public void setForma(int f)
    {
        forma = f;   
    }

    public String toString()
    {
        return "DNI: " + dni + "\tNombre: " + nombre + "\tDestino: " + destino + "\tForma de pago: " + forma;
    }
}
